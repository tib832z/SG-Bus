doctype html
html(lang='en-GB')
    head
        meta(charset='UTF-8')
        meta(http-eqiv='X-UA-Compatible' content='IE=Edge')
        meta(name='description' content='A transport app for Singapore')
        meta(name='keywords' content='bus,mrt,transport,singapore')
        meta(name='author' content='Unikitty Pte. Ltd.')
        meta(name='application-name' content='TransportSG')
        meta(name='viewport' content='initial-scale=1.0, maximum-scale=1.0, user-scalable=no')
        meta(name='google' content='notranslate')
        meta(name='theme-color' content='#171717')
        meta(name='apple-mobile-web-app-capable' content='yes')
        meta(name='mobile-web-app-capable' content='yes')
        meta(name='apple-mobile-web-app-status-bar-style' content='black-translucent')
            
            
        meta(property='og:description' content='A transport app for Singapore')
        meta(property='og:locale' content='en_GB')
        meta(property='og:site_name' content='TransportSG')
        meta(property='og:title' content='TransportSG')
        meta(property='og:type' content='website')
        meta(property='og:image' content='https://transportsg.me/static/images/favicon512.png')
        meta(property='og:url' content='https://transportsg.me')
        meta(property='twitter:card' content='summary')
        meta(property='twitter:url' content='https://transportsg.me')
        meta(property='twitter:title' content='TransportSG')
        meta(property='twitter:description' content='A transport app for Singapore')
        meta(property='twitter:image' content='https://transportsg.me/static/images/favicon512.png')

        link(rel='icon' type='image/png' href='/static/images/favicon192.png')
        link(rel='shortcut icon' type='image/png' href='/static/images/favicon512.png')
        link(rel='apple-touch-icon' type='image/png' href='/static/images/favicon512.png')
        link(rel='stylesheet' href='/static/css/style.css')
        link(rel='manifest' href='/static/manifest.json')

        block head
    body
        div#header
            block header
            div#links
                block links
                a#mrt-disruptions(href='/mrt/disruptions' style='display: none;')
                    span MRT
                    span Disruption
                a#home(href='/') Home
        div#content
            block content
                
        script(src='/static/scripts/helper.js')
        script(src='/static/scripts/sw.js' async)
        script(src='/static/scripts/header-magic.js' async)
        block scripts
        
        style#disruption
        block css
